@model BanHangNetCoreNhom123.Models.LoaiThucDon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layout/Admin/Layout.cshtml";
}

<h1>Quản lý loại sản phẩm</h1>
<hr />

<div class="container text-center">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Tên loại
                    <input asp-for="TenLoai" class="form-control" />
                    <span asp-validation-for="TenLoai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary col-12" />
                </div>
            </form>
            <a asp-controller="LoaiAdmin" asp-action="Index" type="button"><button class="btn btn-secondary col-12" data-dismiss="modal">Trở về</button></a>

        </div>
    </div>
</div>