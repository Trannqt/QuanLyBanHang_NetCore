@model BanHangNetCoreNhom123.Models.NhaSanXuat

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Layout/Admin/Layout.cshtml";
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Sửa nhà sản xuất</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaNSX" />
                <div class="form-group">
                    Tên nhà sản xuất
                    <input asp-for="TenNSX" class="form-control" />
                    <span asp-validation-for="TenNSX" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<a asp-controller="NhaSanXuatAdmin" asp-action="Index" type="button"><button class="btn btn-secondary" data-dismiss="modal">Trở về</button></a>*@
                    <button type="submit" class="btn btn-primary col-12">Lưu</button>
                </div>
            </form>
            <a asp-action="Index"><button class="btn btn-danger col-12">Trở về</button></a>

        </div>

    </div>
</div>

